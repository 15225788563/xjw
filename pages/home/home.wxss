/* pages/home/home.wxss */
.connet{
  height: 100%;
  background: #f5f5f5;
}
.harder{
  display: flex;
  align-items:flex-start;
  background: #ccc;
  height: 100px;
  padding-top: 30px;
}
.harder>.Search{
  position: relative;
  margin-left: 63rpx
}
.harder>.Search>image{
  position: absolute;
  top: 5.5rpx;left: 12rpx;bottom: 0;right: 0;
  width: 42rpx;
  height: 42rpx;
}
.harder>view>image{
  width: 45rpx;
  height: 45rpx;
}
.harder>view>input{
  background: #d2d7d4;
  color: #fff;
  width: 285rpx;
  border: 1px solid #ccc;
  border-radius: 10px;
  padding-left: 56rpx;
  font-size: 10px;
  height: 46rpx;
  margin-right: 37rpx;
}
.harder>view>input::-webkit-input-placeholder{
  color:#fff;
}


.Finance{
  width: 690rpx;
  height: 100px;
  margin: -45px auto;
  padding-top: 10px;
  border-radius: 10px;
  text-align: center;
  background: #fff;
  box-shadow: 0 5px 5px  #d3d2d2;
}
.Finance>view:first-child>text{
  font-size: 18px;
}
.Finance>.Finances{
  display: flex;
}
.Finance>.Finances>view{
  width: 50%;
  color: #939393;
}
.Finance>.Finances>view:first-child{
  border-right: 1px solid #000
}
.nav{
  margin-top: 65px;
  display: flex;
  flex-wrap:wrap;
}
.nav>view{
  width: 20%;
  text-align: center;
  margin: 5px 0;
  font-size: 8px;
  color: #000;
}
.nav image{
  width: 81rpx;
  height: 81rpx;
  display: block;
  margin: 0 auto;
}
.navlst{
  display: flex;
  align-items: center;
  padding-left: 7%;
  font-size: 13px;
  margin-bottom: 5px;
}
.navlst>image{
  width: 35rpx;
  height: 35rpx;
}
.Advertisement{
  height: 60px;
  width: 100%;
  border-radius: 10px;
  background: #dcdcdc;
  text-align: center;
  line-height: 60px;
  font-size: 12px;
  box-shadow: 0 5px 5px  #d3d2d2;
}
  .Contacts{
    margin-top: 20px;
  }
  .Contacts>.hemo{
    margin-left: 7%;
    border-left: 10px solid #09c15f;
    padding-left: 2%;
  }
  .Contacts>.list{
    display: flex;
    justify-content: space-around;
    font-size: 8px;
    color: #d7d7d7
  }
  .Contacts>.list>view>image{
    width: 80rpx;
    height: 80rpx;
    display: block;
    margin: 10px auto 5px auto;
  }