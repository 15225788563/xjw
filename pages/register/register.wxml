<view class="container">
  <view class="harder">
    <view bindtap="hemo"><image src="/imgs/16.png"/></view>
    <text>注册</text>
  </view>
  <view class="block">
    <input bindinput="userNameInput" size="mini" placeholder="请输入手机号" />
    <view class="Verification">
    <input bindinput="veri" placeholder="请输入短信验证码" />
    <button>点击获取验证码</button>
