    <input bindinput="passWord" size="mini" password="true" placeholder="请输入密码" />
    <input bindinput="pass" size="mini" password="true" placeholder="请重复密码" />
    <view class="btn">
      <button size="mini" class="land" bindtap="register" >注册</button>
    </view>
  </view>
</view>