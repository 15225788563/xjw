<view class="order">
  <view class="header">
      <text class="left"><image src="../../imgs/1.png" style="width:50rpx;height:50rpx;"></image> 返回</text>
      <text class="cent">确认订单</text>
   </view>
   <view class="main" wx:for="{{reals}}">
      <view class="mony">实退金额：<text>{{item.real}}</text></view>
      <view class="real">
         <view class="name">还筐人：{{item.name}}</view>
         <view class="realtop">
          <view>还筐时间：<text>{{item.time}}</text></view>
          <view>已接收(件) <text>{{item.num}}</text></view>
          <view class="det">逾期违约金（元）<text>{{item.damages}}</text></view>
          <view class="money">应退押金：<text>{{item.money}}</text></view>
        </view>
      </view>
   </view>
   <view class="Details">
      <block wx:for="{{lists}}">
      <view class="list">
        <view class="top">
          <view class="return">租借人：{{item.returned}}</view>
          <view class="retime">还筐人：{{item.payer}}</view>  
        </view>
        <view class="center">
         <view class="center_l">筐子编号： </view>
         <view class="text" wx:for="{{nums}}">
           <text>{{item.number}}</text>
            <text>{{item.number1}}</text>
            <text>{{item.number2}}</text>
         </view>
        </view>   
        <view class="bottom">
          <view class="numb">共{{item.num}}个筐子</view>
          <view class="total">
          押金共计：<text>{{item.money}}</text>
          </view>
        </view>
      </view>
     </block>
   </view>
   <view class="botton">
      <button type="primary" catchtap="confirm" size="mini">确认收款</button>
    </view>
</view>
