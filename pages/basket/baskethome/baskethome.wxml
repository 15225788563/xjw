<!-- 筐子首页 -->
<view class="container">
  <!-- 头部 -->
  <view class="harder" > 
    <view class="Search">
      <image src="/imgs/2.png"/>
      <input placeholder="查看产品库存" />
    </view>
    <view>
      <image src="/imgs/3.png" />
    </view> 
  </view>

  <!-- 导航 -->
  <view class="nav">
    <view wx:for="{{navs}}" wx:key="key">
      <view catchtap="btn" data-navid="{{item.id}}">
        <image src="{{item.url}}"/>
        <text>{{item.name}}</text> 
      </view>
    </view>
  </view>
  <!-- 订单 -->
  <view class="Order">
    <view wx:for="{{Orderlist}}" wx:key="key">
      <view class="list">
        <view class="hemo">
          <text>订单详情</text>
        </view>
        <view class="orders">
          <text class="Ordername">{{item.Ordername}}</text><text class="txxt">{{item.Ordertiem}}</text>
        </view>
        <text class="txxt">订单号:{{item.Ordernumber}}</text>
        <view class="orderx">
          <view>
            <text class="txxt">支付定金：{{item.Orderrent}}
            </text>
            <text class="txxt">支付押金：{{item.Orderdeposit*item.Orderrent}}
            </text>
            <text class="txxt">订单状态：{{item.Orderstate}}
            </text> 
          </view>
          <button class="btn" data-="">查看详情</button>
        </view>
      </view>
    </view>
  </view>
</view>